#!/bin/sh

if [ -f state/PKGNAME ]; then
    curpkg=$(cat state/PKGNAME);
fi;

case $1 in
    get|geti)
	upper=$(echo $2 | tr [a-z] [A-Z]);
	if [ -f state/${upper} ]; then
	    cat state/${upper};
	elif [ "$1" = geti ]; then
	    echo "No value for ${upper}";
	fi;
	exit;
	;;
    set)
	upper=$(echo $2 | tr [a-z] [A-Z]);
	echo $3 > state/${upper};
	exit;
	;;
    start|read|getsource)
	./getsource $@;
	exit;
	;;
esac;

if [ -f "sources/$1" ]; then
    if [ -z "${PACKAGING_ROOT}" ]; then
	. packaging.sh;
    elif [ "${curpkg}" != "$1" ]; then
	. packaging.sh;
    fi;
fi;

ACTION=$1;

if [ "${PKGNAME}" != "${curpkg}" ]; then
    ./getsource ${PKGNAME};
fi;

case ${ACTION} in
    deb|debian)
	debtool ${curpkg} $@;
	exit;
	;;
    rpm|redhat)
	rpmtool ${curpkg} $@;
	exit;
	;;
    prep|prepare|pkg|package|install|push)
	${PKGTOOL} ${curpkg} ${ACTION} $@;
	exit;
	;;
    pkg|package)
	${PKGTOOL} ${curpkg} ${ACTION} $@;
	exit;
	;;
esac
   

Name:           @PKGNAME@
Version:        @VERSION@
Release:        1%{?dist}
Summary:        MariaDB/MySQL bindings for kno

Group:          System Environment/Libraries
License:        GNU GPL
URL:            http://www.beingmeta.com/
Source0:        kno-@PKGNAME@.tar
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)

BuildRequires:  libu8-devel kno-devel 
Requires:       libu8 >= 3.0 kno >= 2106

%description
This provides KNO wrappers for the MariaDB/MYSql C connectors

%prep
%setup -q

%build
make %{?_smp_mflags}

%pre

%install
rm -rf $RPM_BUILD_ROOT
make install SUDO= DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT

%post -p /sbin/ldconfig

%postun -p /sbin/ldconfig

%files
%{_libdir}/kno/exif.so*
%{_libdir}/kno/qrcode.so*
%{_libdir}/kno/imagick.so*
%doc

